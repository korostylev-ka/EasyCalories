<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyCalories" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!--        release < 1.4-->
<!--        <item name="colorPrimary">#031D44</item>-->
        <item name="colorPrimary">#325596</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
<!--        <item name="colorSecondary">@color/teal_200</item>-->
        <item name="colorSecondary">@color/main_color_blue</item>
        <item name="colorSecondaryVariant">@color/action_button</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Change options menu icon -->
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>

    </style>

    <style name="Widget.AppTheme.IconButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/main_color_blue</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">@dimen/icon_button_padding</item>
        <item name="android:paddingEnd">@dimen/icon_button_padding</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>
    <style name="Widget.AppTheme.IconButtonOk" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/ok</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">@dimen/icon_button_padding</item>
        <item name="android:paddingEnd">@dimen/icon_button_padding</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>
    <style name="Widget.AppTheme.DeleteButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/wrong</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">@dimen/icon_button_padding</item>
        <item name="android:paddingEnd">@dimen/icon_button_padding</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>
    <style name="Widget.AppTheme.DateButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/main_color_blue</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">@dimen/icon_button_padding</item>
        <item name="android:paddingEnd">@dimen/icon_button_padding</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>
    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/menu_icon_48dp</item>
    </style>

    <style name="WaterProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:scaleY">2</item>
        <item name="android:gravity">center</item>
        <item name="android:progressBackgroundTint">@color/water_empty</item>
        <item name="android:progressTint">@color/water_full</item>
<!--        <item name="android:max">1500</item>-->
    </style>
    <style name="WaterTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/water_text</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="WaterAddButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/water_full</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>