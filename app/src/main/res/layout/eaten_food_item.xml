<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/edit_text_no_gradient"
    android:id="@+id/eatenFoodItem"
    android:padding="@dimen/padding_edit_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_edit_text">

    <TextView
        android:id="@+id/timeOfEat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textRegular"
        tools:text="time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/foodName"
        app:layout_constraintBottom_toBottomOf="@id/foodName">
    </TextView>
    <TextView
        android:layout_marginStart="@dimen/common"
        android:layout_marginEnd="@dimen/common"
        android:id="@+id/foodName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/textTitle"
        tools:text="@string/foodName"
        app:layout_constraintStart_toEndOf="@id/timeOfEat"
        app:layout_constraintEnd_toStartOf="@id/deleteButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/caloriesTitle">
    </TextView>
    <TextView
        android:id="@+id/poptionWeightTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_edit_text"
        style="@style/textRegular"
        app:layout_constraintStart_toStartOf="@id/timeOfEat"
        app:layout_constraintTop_toBottomOf="@id/foodName"
        android:text="@string/weight_g">
    </TextView>
    <TextView
        android:layout_marginStart="@dimen/padding_edit_text"
        android:id="@+id/poptionWeightValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/poptionWeightTitle"
        app:layout_constraintTop_toTopOf="@id/poptionWeightTitle"
        app:layout_constraintBottom_toBottomOf="@id/poptionWeightTitle"
        tools:text="0">
    </TextView>
    <TextView
        android:layout_marginTop="@dimen/padding_edit_text"
        android:id="@+id/proteinsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/proteinsTextRegular"
        app:layout_constraintStart_toStartOf="@id/poptionWeightTitle"
        app:layout_constraintTop_toBottomOf="@id/poptionWeightTitle"
        android:text="@string/P">
    </TextView>
    <TextView
        android:id="@+id/proteinsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_edit_text"
        style="@style/proteinsTextRegular"
        app:layout_constraintStart_toEndOf="@id/proteinsTitle"
        app:layout_constraintTop_toTopOf="@id/proteinsTitle"
        app:layout_constraintBottom_toBottomOf="@id/proteinsTitle"
        tools:text="0">
    </TextView>
    <TextView
        android:layout_marginStart="@dimen/common"
        android:id="@+id/fatsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/fatsTextRegular"
        app:layout_constraintStart_toEndOf="@id/proteinsValue"
        app:layout_constraintTop_toTopOf="@id/proteinsValue"
        app:layout_constraintBottom_toBottomOf="@id/proteinsValue"
        android:text="@string/F">
    </TextView>
    <TextView
        android:id="@+id/fatsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_edit_text"
        style="@style/fatsTextRegular"
        app:layout_constraintStart_toEndOf="@id/fatsTitle"
        app:layout_constraintTop_toTopOf="@id/fatsTitle"
        app:layout_constraintBottom_toBottomOf="@id/fatsTitle"
        tools:text="0">
    </TextView>
    <TextView
        android:layout_marginStart="@dimen/common"
        android:id="@+id/carbsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/carbsTextRegular"
        app:layout_constraintStart_toEndOf="@id/fatsValue"
        app:layout_constraintTop_toTopOf="@id/fatsValue"
        app:layout_constraintBottom_toBottomOf="@id/fatsValue"
        android:text="@string/C">
    </TextView>
    <TextView
        android:id="@+id/carbsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_edit_text"
        style="@style/carbsTextRegular"
        app:layout_constraintStart_toEndOf="@id/carbsTitle"
        app:layout_constraintTop_toTopOf="@id/carbsTitle"
        app:layout_constraintBottom_toBottomOf="@id/carbsTitle"
        tools:text="0">
    </TextView>
    <TextView
        android:id="@+id/caloriesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common"
        style="@style/caloriesTextRegular"
        app:layout_constraintStart_toEndOf="@id/poptionWeightValue"
        app:layout_constraintTop_toTopOf="@id/poptionWeightValue"
        app:layout_constraintBottom_toBottomOf="@id/poptionWeightValue"
        android:text="@string/kcal">
    </TextView>
    <TextView
        android:id="@+id/caloriesValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_edit_text"
        style="@style/caloriesTextRegular"
        app:layout_constraintStart_toEndOf="@id/caloriesTitle"
        app:layout_constraintTop_toTopOf="@id/caloriesTitle"
        app:layout_constraintBottom_toBottomOf="@id/caloriesTitle"
        tools:text="0">
    </TextView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:icon="@drawable/delete_button_new_48dp"
        style="@style/Widget.AppTheme.DeleteButton"
        android:layout_marginEnd="@dimen/common"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </com.google.android.material.button.MaterialButton>

</androidx.constraintlayout.widget.ConstraintLayout>